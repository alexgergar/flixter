<div class="box-style col-10 offset-1">
    <h1 class="text-center">Learn something today</h1>
    <hr />

    <% @courses.each do |course| %>
        <h2 class="text-center mb-3"><%= course.title %></h2>
        <div class="row">
            <div class="col-sm-10 col-12 ">
                <%= course.description %>
            </div>
            <div class="col-sm-2 col-12 my-auto text-center">
                <%= link_to "Button", "#", class: "btn btn-outline-secondary btn-large"%>
            </div>
        </div>
        <br class="clr" />
    <% end %>
</div>