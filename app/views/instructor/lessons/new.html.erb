<br />
<div class="box-style col-8 offset-2">
    <h1 class="text-center">Add a new lesson for <%= current_section.title %></h1>
     <%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section) do |f| %>
        <%= f.input :title %>
        <%= f.input :subtitle, placeholder: 'One sentence description of your lesson.' %>
        <%= f.input :video %>
        <div class="text-right mb-1">
            <%= f.submit "Add a lesson", class: "btn btn-outline-secondary btn-large" %>
        </div>
    <% end %> 
</div>