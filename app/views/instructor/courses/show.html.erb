<br />
<div class="box-style col-10 offset-1">
    <h1 class=text-center><%= @course.title %></h1>
    <br />
    <%= link_to "Preview as a Student", course_path(@course), class: 'btn btn-info' %>
        <br class="clr" />

    <div class="text-center">
        <%= link_to "Add a new section", new_instructor_course_section_path(@course), class: 'btn btn-danger btn-lg'%>
    </div>
<br class="clr" />
    <ul>
      <% @course.sections.each do |section| %>
          <li>
              <h4><%= section.title %></h4>
          </li>
          <li>
              <p><%= section.description%></p>
          </li>
      <% end %>
    </ul>
</div>