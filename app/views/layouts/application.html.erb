<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.6.0/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-expand-md navbar-light bg-faded ">
        <%= link_to 'Flixter', root_path, class: "navbar-flixter px-3"%>       

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbartoggler" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
        <div class="collapse navbar-collapse" id="navbartoggler">
          <ul class="navbar-nav mr-auto mt-lg-0">
            <li class="nav-item">
              <%= link_to "See All Courses", courses_path, class: "nav-link"%>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search">
            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
          </form>
          <ul class="navbar-nav my-2 my-lg-0">
            <% if user_signed_in? %>
            <li class="nav-item ml-2">
              <%= link_to "My Dashboard", dashboard_path, class: "nav-link"%>
            </li>
            <li class="nav-item ml-2">
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link"%>
            </li>
            <% else %>
            <li class="nav-item ml-2">
              <%= link_to "Sign In", new_user_session_path, class: "nav-link"%>
            </li> 
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link"%>
            </li> 
            <% end %>  
          </ul>
        </div>
      </nav>


      <% if notice.present? %>
        <p class="alert alert-info alert-dismissible fade show" role="alert">
          <%= notice %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row text">
          <div calss="col-12 col-sm-3">
            <b>Teachers</b>
              <br/>
              <%= link_to 'Teach a Course', new_instructor_course_path %>
              <br/>
              <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div calss="col-12 col-sm-3">
              <b>About</b>
              <br/>
              <%= link_to 'Team', "#" %>
              <br/>
              <%= link_to 'Careers', "#" %>
              <br/>
              <%= link_to 'Privacy Policy', privacy_path %>
              <br/>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
              <br />
              alexandra.gergar@gmail.com
              <br />
              Washington D.C, 20001
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to "https://www.linkedin.com/in/alexandragergar/" do %>
              <span class="fa fa-linkedin fa-2x social-button" aria-hidden="true"></span> 
            <% end %>
            <%= link_to "https://github.com/alexgergar/" do %>
              <span class="fa fa-github fa-2x social-button" aria-hidden="true"></span> 
            <% end %>
             <%= link_to "https://twitter.com/alexandragergar" do %>
              <span class="fa fa-twitter fa-2x social-button" aria-hidden="true"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    
  <script src='https://vjs.zencdn.net/7.6.0/video.js'></script>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
