            <br />
            <br />
        <div class="row">
            <div class="col-10">
                <%= course.description %>
            </div>
            <div class="col-2">
                <%= link_to "More Info...", course_path(course), class: "btn btn-outline-secondary"%>
            </div>
        </div>
        <hr class="col-8 offset-2">
        <br class="clr" />
    <% end %>
</div>